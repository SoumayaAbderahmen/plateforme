<form method="post" action="{{ path('sites_delete', {'id': site.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
    <button class="btn btn-primary" style="width:100px;background-color:Red" ><i class="icon-cross2"></i> Delete</button>
</form>
