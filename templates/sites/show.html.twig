{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}
    <h1>Sites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ site.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ site.description }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ site.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" style="width:100px" href="{{ path('sites_index') }}"><i class="icon-undo2"></i> back to list</a>

    <a class="btn btn-primary" style="width:100px" href="{{ path('sites_edit', {'id': site.id}) }}"><i class="icon-pencil"></i> edit</a>

    {{ include('sites/_delete_form.html.twig') }}
{% endblock %}
