{% endblock %}
{% block body %}
<div class="content">
   <div class="card-header header-elements-inline" style="background-color:RoyalBlue">
						<h3 class="card-title" style="color:white">Excursion</h3>
						<div class="header-elements">
							<a class="btn btn-primary" href="{{ path('excursion_new') }}" style="width:100px" align="right" ><i class="icon-add"></i> Ajouter</a>
	                	</div>
					</div>
    

    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Pays</th>
                <th>Comprend</th>
                <th>Ne comprend pas</th>
                <th>Prix Ã  partir</th>
                <th>actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for excursion in excursions %}
            <tr>
                <td>{{ excursion.id }}</td>
                  <td>{{excursion.titre}}</td>
                <td>{{excursion.description}}</td>
                  {% for o in excursion.pays %}
            
                <td>{{ o.nom}}</td>
               
            
            {% endfor %}
                  <td>{{excursion.comprend}}</td>
                    <td>{{excursion.necomprendpas}}</td>
                      <td>{{excursion.prixapartir}}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('excursion_edit', {'id': excursion.id}) }}"style="width:100px"><i class="icon-pencil"></i> Modifier</a>
                    
                    {{ include('excursion/_delete_form.html.twig') }}
                </td>
                  <td>
                    <a class="btn btn-primary" href="{{ path('excursion_show', {'id': excursion.id}) }}"style="width:100px"> Reserver</a>
                    
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
